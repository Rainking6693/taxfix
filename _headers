# Netlify Headers Configuration for TaxFix
# Performance optimization and caching rules

# Security Headers (Apply to all routes)
/*
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# Critical SEO files - No caching to ensure immediate updates
/robots.txt
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/sitemap.xml
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Static Assets - Long term caching
/js/*
  Cache-Control: public, max-age=31536000, immutable

/css/*
  Cache-Control: public, max-age=31536000, immutable

# Images - Long term caching
*.png
  Cache-Control: public, max-age=31536000, immutable

*.jpg
  Cache-Control: public, max-age=31536000, immutable

*.gif
  Cache-Control: public, max-age=31536000, immutable

*.svg
  Cache-Control: public, max-age=31536000, immutable

*.webp
  Cache-Control: public, max-age=31536000, immutable

# Fonts - Long term caching
*.woff
  Cache-Control: public, max-age=31536000, immutable

*.woff2
  Cache-Control: public, max-age=31536000, immutable

# HTML Pages - Short term caching with revalidation
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Service Worker - No cache to ensure updates
/service-worker.js
  Cache-Control: no-cache, no-store, must-revalidate